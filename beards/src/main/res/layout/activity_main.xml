<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.agcy.beards.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/background"
            android:src="@drawable/beard1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/container"
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MergeRootFrame" />
    <LinearLayout
        android:id="@+id/about"
        android:background="#80000000"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:visibility="gone"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView

                android:text="About"
                android:textColor="#fff"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:textColor="#fff"
                android:layout_margin="12dp"
                android:text="All guidelines were taken from beards.org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:text="Photo source - tumblr.com"
            android:textColor="#fff"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="Assembled in California"
            android:textColor="#fff"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Made in China"
            android:textColor="#fff"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:onClick="aboutClick"
        android:background="#80000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
